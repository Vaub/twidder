<div id="welcome" class="row">
    <div class="row col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8">
        <div id="login_form" class="col-sm-4">
            <h1>Sign in</h1>
            <div class="welcome-section">
                <form id="login" action="">
                    <div class="form-group">
                        <label for="user_email" class="control-label">Email</label>
                        <input type="email" name="user_email" id="user_email" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="user_password" class="control-label">Password</label>
                        <input type="password" name="user_password" id="user_password" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </div>
                </form>
            </div>
        </div>
        <div id="signup_form" class="col-sm-8">
            <h1>Sign up</h1>
            <div class="welcome-section">
                <form id="signup" action="" class="form-horizontal">
                    <div class="form-group">
                        <label for="first_name" class="control-label col-sm-4">First name</label>
                        <div class="col-sm-8">
                            <input type="text" id="first_name" name="first_name" class="form-control"
                                   required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="family_name" class="control-label col-sm-4">Family name</label>
                        <div class="col-sm-8">
                            <input type="text" id="family_name" name="family_name"
                                   class="form-control" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="gender" class="control-label col-sm-4">Gender</label>
                        <div class="col-sm-8">
                            <select name="gender" id="gender" class="form-control" required>
                                <option value="m" selected="selected">Male</option>
                                <option value="f">Female</option>
                            </select>
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="city" class="control-label col-sm-4">City</label>
                        <div class="col-sm-8">
                            <input type="text" id="city" name="city" class="form-control"
                                   required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="country" class="control-label col-sm-4">Country</label>
                        <div class="col-sm-8">
                            <input type="text" id="country" name="country" class="form-control"
                                   required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="username" class="control-label col-sm-4">Email</label>
                        <div class="col-sm-8">
                            <input type="email" id="username" name="username" class="form-control"
                                   required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password" class="control-label col-sm-4">Password</label>
                        <div class="col-sm-8">
                            <input type="password" id="password" name="password"
                                   class="form-control" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="repeat_password" class="control-label col-sm-4">Repeat password</label>
                        <div class="col-sm-8">
                            <input type="password" id="repeat_password" name="repeat_password"
                                   class="form-control"
                                   required>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <button type="submit" class="btn btn-success btn-block">Sign up</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>